<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl1"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="top|center">

        <Button
            android:id="@+id/btn_sentinels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ttl_accounts_manager"
            android:drawableRight="@drawable/ic_manager"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/mainbuttonstyle"
            android:padding="20dp"/>


        <Button
            android:id="@+id/btn_sec_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mainbuttonstyle"
            android:drawableRight="@drawable/ic_action_name"
            android:padding="20dp"
            android:text="@string/btn_ttl_secured_zone"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ttl_accounts_sett"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/ic_settings"
            android:background="@drawable/mainbuttonstyle"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btn_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ttl_report_results"
            android:drawableRight="@drawable/ic_reports"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/mainbuttonstyle"
            android:padding="20dp"/>
    <Button
        android:id="@+id/btn_start_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ttl_update"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonstylewhiteboard"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/output_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textColor="@color/colorWhite"
        android:text="TextView"
        android:gravity="center"
        android:background="@color/colorBigButtons"
        style="@style/MainButtonStyleLand"/>
</LinearLayout>
