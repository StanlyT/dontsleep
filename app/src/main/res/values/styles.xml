<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainButtonStyleLand" parent="@style/AppTheme">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SentinelStyle" parent="@style/AppTheme">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SentinelStyleInput" parent="@style/AppTheme">
        <item name="android:textColorHint">#828282</item>
        <item name="android:cacheColorHint">#dfb457</item>
        <item name="android:textColorHintInverse">#37ff00</item>
        <item name="android:colorBackgroundCacheHint">#00bef2</item>
    </style>
</resources>
